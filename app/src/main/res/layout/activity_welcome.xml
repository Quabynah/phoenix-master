<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_super_dark"
	tools:context="io.pergasus.ui.WelcomeActivity">
	
	<android.support.v4.view.ViewPager
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
	
	<io.pergasus.ui.widget.InkPageIndicator
		android:id="@+id/indicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top|center_horizontal"
		android:layout_marginTop="@dimen/padding_dialog"
		app:currentPageIndicatorColor="@color/page_indicator_dark_selected"
		app:pageIndicatorColor="@color/page_indicator_dark" />
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginBottom="?android:actionBarSize"
		android:padding="@dimen/spacing_normal">
		
		<Button
			android:id="@+id/page_previous"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:background="@android:color/transparent"
			android:paddingEnd="@dimen/padding_normal"
			android:paddingStart="@dimen/padding_normal"
			android:text="@string/previous"
			android:textColor="@color/text_primary_light"
			android:visibility="invisible" />
		
		<Button
			android:id="@+id/page_next"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:background="@android:color/transparent"
			android:paddingEnd="@dimen/padding_normal"
			android:paddingStart="@dimen/padding_normal"
			android:text="@string/next"
			android:textColor="@color/text_primary_light" />
	
	</RelativeLayout>

</FrameLayout>
