<!-- layout_[width|height] not needed as this is only included in a GridLayout -->
<!--suppress AndroidDomInspection -->
<merge
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/dribbble_shot_description">

    <io.pergasus.ui.widget.BaselineGridTextView
        android:id="@+id/shot_title"
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:paddingStart="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_room_for_fab"
        android:paddingBottom="@dimen/padding_normal"
        android:background="@color/light_grey"
        tools:text="Phoenix product title"
        style="@style/TextAppearance.DribbbleShotTitle" />
    
    <io.pergasus.ui.widget.BaselineGridTextView
        android:id="@+id/shot_price"
        android:layout_columnSpan="3"
        android:paddingStart="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:textColorLink="@color/dribbble_links"
        android:textColorHighlight="@color/dribbble_link_highlight"
        tools:text="GHC 250"
	    android:paddingBottom="@dimen/padding_normal"
        style="@style/TextAppearance.DribbbleShotPrice" />

    <io.pergasus.ui.widget.BaselineGridTextView
        android:id="@+id/shot_description"
        android:layout_columnSpan="3"
        android:paddingStart="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:textColorLink="@color/dribbble_links"
        android:textColorHighlight="@color/dribbble_link_highlight"
        tools:text="Check out this sweet eye candy!"
        style="@style/TextAppearance.DribbbleShotDescription" />

</merge>
